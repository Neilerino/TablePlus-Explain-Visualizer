{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": false
  },
  "include": ["src/**/*", "app/**/*", "types/**/*"],
  "exclude": ["node_modules", "dist", "PostgresExplain.tableplusplugin"]
}
